<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ControleAcoes">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.javaweb.transacoes.model.Compra</class>
		<class>br.com.javaweb.transacoes.model.HistoricoTransacao</class>
		<class>br.com.javaweb.transacoes.model.Venda</class>
		<class>br.com.javaweb.model.ContaBancaria</class>
		<class>br.com.javaweb.model.Investidor</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/controle_acoes?zeroDateTimeBehavior=convertToNull" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
<!-- 			<property name="hibernate.hbm2ddl.auto" value="update" /> -->
		</properties>
	</persistence-unit>
</persistence>
